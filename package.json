{
  "name": "next-realworld-monorepo",
  "version": "1.0.0",
  "description": "A production-ready Next.js monorepo boilerplate built with the App Router. Features diverse real-world examples using modern technologies like TypeScript, Prisma, Tailwind CSS, and Zod. License",
  "main": "index.js",
  "bugs": {
    "url": "https://github.com/rklpoi5678/next-realworld-monorepo/issues"
  },
  "scripts": {
    "format": "pnpm prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=24.x",
    "pnpm": ">=10.x",
    "npm": "use-pnpm",
    "yarn": "use-pnpm"
  },
  "keywords": [
    "realworld",
    "meta"
  ],
  "author": "kim-youn-gi <meta-os@zohomail.com> (https://github.com/rklpoi5678/next-realworld-monorepo/tree/develop)",
  "license": "MIT",
  "dependencies": {
    "turbo": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@packages/eslint-config": "workspace:*",
    "@packages/tsconfig": "workspace:*",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "typescript": "^5.5.4"
  }
}